{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "types": ["node"],
    "outDir": "dist/server",
    "rootDir": "src/server",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/server/**/*.ts",
    "src/server/**/*.js",
    "src/types/**/*.ts",
    "src/types/**/*.js"
  ],
  "exclude": [
    "src/components/**/*",
    "src/hooks/**/*",
    "src/storage/**/*",
    "jest.setup.js"
  ]
}